<resources >

    <style name="MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/color_white</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--给启动的activity设置一个背景主题，这样可以消除启动时候的白色背景-->
    <style name="AppWelcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/welcome</item>
    </style>

    <!-- Define the list items style begin -->
    <style name="list_item_seperator_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/color_dark_grey</item>
    </style>

    <style name="list_item_cell_seperator_layout">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/color_dark_grey</item>
    </style>
    <!-- Define the list items style end -->
    <style name="button_blue_style">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">2dp</item>
        <item name="android:background">@color/colorBase</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="linearlayout_horizontal_center_style">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="textview_style">
        <item name="android:textColor">#464646</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">2dp</item>
    </style>

    <!-- 自定义loading dialog -->
    <!--
    android:backgroundDimEnabled：表示页面是否变暗，我们设置false，不变暗
    android:windowBackground：表示背景颜色，这里设置为透明
      -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">@color/colorBase</item>
    </style>

    <style name="MyTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>

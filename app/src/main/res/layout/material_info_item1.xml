<LinearLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1,3,5,7,9,11">
        <TableRow
            android:id="@+id/table_header_row"
            android:minHeight="?android:attr/listPreferredItemHeight"
            >
            <View
                style="@style/list_item_cell_seperator_layout"
                />
            <TextView
                android:id="@+id/materialCode"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
            <View
                style="@style/list_item_cell_seperator_layout"
                />
            <TextView
                android:id="@+id/toBeInOrderNum"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
            <View
                style="@style/list_item_cell_seperator_layout"
                />
            <TextView
                android:id="@+id/testNum"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
            <View
                style="@style/list_item_cell_seperator_layout"
                />
            <TextView
                android:id="@+id/acNum"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
            <View
                style="@style/list_item_cell_seperator_layout"
                />
            <TextView
                android:id="@+id/reNum"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:gravity="center"
                />
            <View
                style="@style/list_item_cell_seperator_layout"
                />
            <EditText
                android:id="@+id/invalidateNum"
                android:inputType="number"
                android:background="@null"
                android:layout_width="30dip"
                android:layout_height="match_parent"
                android:gravity="center"
                android:hint="请输入"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/color_red"
                />
            <View
                style="@style/list_item_cell_seperator_layout"
                />
        </TableRow>
    </TableLayout>
</LinearLayout>
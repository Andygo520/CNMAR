<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/search"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <View
            style="@style/list_item_seperator_layout"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="1,3,5,7">
                <TableRow
                    android:id="@+id/stock_list_header_row">
                    <View
                        style="@style/list_item_cell_seperator_layout"
                        />
                    <TextView
                        android:text="成品编码"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                    <View
                        style="@style/list_item_cell_seperator_layout"
                        />
                    <TextView
                        android:text="成品名称"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                    <View
                        style="@style/list_item_cell_seperator_layout"
                        />
                    <TextView
                        android:text="库存总量"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                    <View
                        style="@style/list_item_cell_seperator_layout"
                        />
                    <TextView
                        android:text="操作"
                        android:textColor="@android:color/black"
                        android:textStyle="bold"
                        android:layout_width="60dip"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        />
                    <View
                        style="@style/list_item_cell_seperator_layout"
                        />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <View
            style="@style/list_item_seperator_layout"
            />
        <ListView
            android:id="@+id/stock_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollingCache="true"
            android:fastScrollEnabled="true"
            android:focusable="true"
            android:divider="@color/color_dark_grey"
            android:dividerHeight="1dip"
            />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.cnmar.LoginActivity">
<LinearLayout
    android:id="@+id/linear0"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="horizontal"
    android:background="#319BD9"
    >
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="left|center_vertical"
        android:src="@mipmap/logo"
        />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:text="欢迎登陆"
    android:textColor="#fff"
    android:layout_gravity="center"
    android:gravity="center"
    />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_gravity="right|center_vertical"
        android:src="@mipmap/scann"
        />
</LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear0"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="中国制造业物联网智能仓储先进先出系统"
        android:textColor="#2BD5D5"
        android:textSize="18sp"
        />
    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv"
        android:layout_marginTop="50dp"
        >
        <LinearLayout
            android:id="@+id/linear1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:background="#fff" >
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#fff"
                    android:src="@mipmap/user_selected" />
            </LinearLayout>

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="text"
                android:maxLength="50"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:hint="请输入用户名："
                android:textColorHint="#aaaaaa"
                android:textColor="#494949"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative1"
        android:layout_gravity="center"
        >
        <LinearLayout
            android:id="@+id/linear2"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#fff" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="#fff"
                    android:src="@mipmap/password_selected" />
            </LinearLayout>

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:inputType="textPassword"
                android:maxLength="50"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:hint="请输入密码："
                android:textColorHint="#aaaaaa"
                android:textColor="#494949"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative2"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="215dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:gravity="left" >

            <CheckBox
                android:id="@+id/chkPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="自动登录"
                android:textSize="16sp"
                android:textColor="#727171"
                android:checked="false" />
        </LinearLayout>

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:background="#319BD9"
            android:text="登录"
            android:textSize="24sp"
            />
    </LinearLayout>
</RelativeLayout>
